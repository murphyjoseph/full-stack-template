{
  "name": "turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:e2e": "pnpm --filter @repo/ui build && playwright test",
    "generate:types": "pnpm --filter server generate:openapi && pnpm --filter @repo/api-schema generate",
    "nuke": "rm -rf node_modules .turbo apps/*/node_modules apps/*/.turbo apps/*/.next apps/*/styled-system packages/*/node_modules packages/*/.turbo packages/ui/styled-system"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "prettier": "^3.7.4",
    "turbo": "^2.8.9",
    "typescript": "5.9.2",
    "typescript-language-server": "^5.1.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=24",
    "npm": "use pnpm",
    "yarn": "use pnpm"
  }
}
